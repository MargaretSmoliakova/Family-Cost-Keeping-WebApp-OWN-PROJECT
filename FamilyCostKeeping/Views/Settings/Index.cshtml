@model SettingsViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Settings</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/AuthenticationForm.css" />
    <link rel="stylesheet" href="~/css/AuthenticationValidationError.css" />
</head>
<body>
    <div class="container">
        <h2>Settings</h2>
        <a asp-controller="Home">Back to the Home page</a>
        @if (TempData["saveSuccessMessage"] != null)
        {
            <div class="alert alert-success center-block text-center">@TempData["saveSuccessMessage"]</div>
        }
        <hr />
        <form asp-action="Index" method="post">
            <div class="form-group">
                <label>Name:</label>
                <input type="text" class="form-control" placeholder="Name">
                <span class="text-danger"></span>
            </div>            
            <br />
            <button type="submit" class="btn btn-danger">Save</button>
            <hr />            
        </form>
    </div>
</body>
</html>