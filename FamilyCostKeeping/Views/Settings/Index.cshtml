@model SettingsViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Settings</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/AuthenticationForm.css" />
    <link rel="stylesheet" href="~/css/AuthenticationValidationError.css" />
</head>
<body>
<div class="container">
    <h2>Settings</h2>
    <a asp-controller="Home">Back to the Home page</a>
    @if (TempData["saveSuccessMessage"] != null)
    {
        <div class="alert alert-success center-block text-center">@TempData["saveSuccessMessage"]</div>
    }
    <hr />
    <form asp-action="Index" method="post">
        <div class="form-group">
            <label>Name:</label>
            <input asp-for="FirstName" type="text" class="form-control" placeholder="Name">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Last Name:</label>
            <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Mail:</label>
            <input asp-for="Mail" type="text" class="form-control" placeholder="email">
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Preferred Currency:&nbsp;</label>
            <select asp-for="PreferredCurrency" asp-items="Html.GetEnumSelectList<Currency>()"></select>            
        </div>
        <div class="form-group">
            <label>Categories:&nbsp;</label>
            <select asp-items="@Model.Categories.Select(c => new SelectListItem { Text = c.Name })"></select>
            <button class="btn btn-default">Change</button>
            <button class="btn btn-danger">Delete</button>
            <button class="btn btn-success" >Add</button>            
        </div>            
        <div class="form-group">
            <label>Start day:&nbsp;</label>
            <select asp-for="MonthStartDay">
                <option>1</option>
                <option>2</option>
                <option>3</option> 
                <option>4</option> 
                <option>5</option> 
                <option>6</option> 
                <option>7</option> 
                <option>8</option> 
                <option>9</option> 
                <option>10</option> 
                <option>11</option> 
                <option>12</option> 
                <option>13</option> 
                <option>14</option> 
                <option>15</option> 
                <option>16</option> 
                <option>17</option> 
                <option>18</option> 
                <option>19</option> 
                <option>20</option> 
                <option>21</option> 
                <option>22</option> 
                <option>23</option> 
                <option>24</option> 
                <option>25</option> 
                <option>26</option> 
                <option>27</option> 
                <option>28</option> 
                <option>29</option> 
                <option>30</option> 
                <option>31</option> 
            </select>
        </div>
        <div>
            <label>Is weekends escaped when month starting:&nbsp;</label>
            <input asp-for="IsWeekendsEscapedInMonthlyRefreshing" type="checkbox" checked="checked" />
        </div>
        <br />
        <button type="submit" class="btn btn-danger">Save</button>
        <hr />            
    </form>
</div>
</body>
</html>

<!--
IsWeekendsEscapedInMonthlyRefreshing = timePeriodsSetting.IsWeekendsEscapedInMonthlyRefreshing-->